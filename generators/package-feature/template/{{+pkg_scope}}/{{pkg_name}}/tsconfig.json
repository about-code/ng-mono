{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": false,
        "noLib": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./build",
        "rootDir": ".",
        "baseUrl": ".",
        "lib": ["es2015", "dom"],
        "skipLibCheck": true
    },
    "files": [
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
